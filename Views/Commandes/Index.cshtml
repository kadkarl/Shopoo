@model IEnumerable<Shopoo.Models.Commande>

@{
    ViewBag.Title = "Mes commandes";
}

<table class="table">
    <tr>
        <th>
            Numéro de commande
        </th>
        <th>
            Date commande
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/commandes/details/@item.Id" class="btn btn-success rounded btn-sm mx-2" title="Supprimer cette commande ?">
                        <i class="fa fa-list"></i>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
