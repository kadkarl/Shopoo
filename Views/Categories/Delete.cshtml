@model Shopoo.Models.Categorie

@{
    ViewBag.Title = "Supprimer";
}

<h3>Supprimer cette catégorie ?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Libelle)
        </dd>

    </dl>

