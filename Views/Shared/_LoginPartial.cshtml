@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @{
                Shopoo.Models.Utilisateur utilisateur = new Shopoo.Models.Utilisateur();

                if (Session["Utilisateur"] != null)
                {
                    utilisateur = (Session["Utilisateur"] as Shopoo.Models.Utilisateur);
                }
            }
            <li class="nav-item">
                @Html.ActionLink("Bienvenue " + utilisateur.Nom + ' ' + utilisateur.Prenom, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            <li class="nav-item">
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">
                    <i class="fa fa-off"></i> Déconnecter
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item"><a href="/account/login" class="nav-link"><i class="fa fa-user"></i> Mon compte</a></li>
    </ul>
}
